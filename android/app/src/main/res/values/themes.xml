    <color name="splash_bg">#FFBB86FC</color>

    <style name="Theme.FlashcardsAndroid" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
