        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/splash_bg</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.FlashcardsAndroid</item>
    </style>
</resources>